{
  "name": "swagger-zod-lib",
  "version": "1.1.0",
  "description": "Gere documentação Swagger a partir de Zod, com suporte a YAML externo e CLI.",
  "type": "commonjs",
  "files": [
    "dist/**/*",
    "bin/**/*"
  ],
  "bin": {
    "swagger-zod": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.esm.json --moduleResolution node",
    "prepublishOnly": "npm run build && npm test",
    "test": "jest --config jest.config.ts",
    "build:cli": "tsc -p tsconfig.cli.json",
    "cli": "ts-node src/cli/index.ts"
  },
  "keywords": [
    "swagger",
    "openapi",
    "zod",
    "cli",
    "typescript",
    "prisma",
    "typeorm",
    "mongoose"
  ],
  "author": "Seu Nome <seu@email.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^13.1.0",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "swagger-ui-express": "^5.0.1",
    "swagger2openapi": "^7.0.8",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@prisma/client": "^6.6.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.14.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/swagger2openapi": "^7.0.4",
    "jest": "^29.7.0",
    "mongoose": "^8.13.2",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.22",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@prisma/client": ">=3.0.0",
    "mongoose": ">=6.0.0",
    "typeorm": ">=0.3.0",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
